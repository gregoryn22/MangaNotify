# Development Environment Configuration
# Copy this to .env.dev and customize for your development needs

# App Configuration
MANGABAKA_BASE=https://api.mangabaka.dev
PORT=8999
DATA_DIR=./dev-data
POLL_INTERVAL_SEC=0  # Disable polling in development

# CORS - Allow local development ports
# Add any additional ports you use for frontend development
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://localhost:8999

# Authentication - Disabled for easier development
AUTH_ENABLED=false
AUTH_SECRET_KEY=dev-secret-key-not-for-production
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123
AUTH_TOKEN_EXPIRE_HOURS=24

# Notifications - Use test/development tokens
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

# Logging - More verbose for development
LOG_LEVEL=DEBUG
LOG_FORMAT=plain

# Timezone
TZ=America/New_York

# Python Development Settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Development Flags
ENVIRONMENT=development
DEBUG=true
