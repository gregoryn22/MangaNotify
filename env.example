# App
MANGABAKA_BASE=https://api.mangabaka.dev
PORT=8999
DATA_DIR=/data
POLL_INTERVAL_SEC=600

# CORS (comma-separated list or * for all)
# SECURITY WARNING: "*" allows any origin - only use in development!
# For production, specify exact domains: "https://yourdomain.com,https://www.yourdomain.com"
CORS_ALLOW_ORIGINS=*

# Pushover (optional)
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Discord (optional)
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

# Timezone (optional)
TZ=America/New_York

# Python ergonomics
PYTHONDONTWRITEBYTECODE=1

# Logging
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=plain # plain or json

# Authentication (optional)
AUTH_ENABLED=false # Set to true to enable authentication
AUTH_SECRET_KEY= # Required if AUTH_ENABLED=true (generate a secure random string)
AUTH_USERNAME=admin # Login username
AUTH_PASSWORD= # Required if AUTH_ENABLED=true
AUTH_TOKEN_EXPIRE_HOURS=24 # JWT token expiration in hours
